{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "log": true,
      "externalConsole": false,
      "ignore": ["**/vendor/**/*.php"],
      "stopOnEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Xdebug connected"
      }
    }
  ]
}